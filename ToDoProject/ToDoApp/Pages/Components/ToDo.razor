@page "/ToDo"
<h3>@HeaderName</h3>

<EditForm Model="task" OnValidSubmit="AddTask">
    <div class="row">
        <!-- Set the width of the column to auto to keep it minimal -->
        <div class="col-auto d-flex">
            <!-- Set a specific width for the input field -->
            <input class="form-control me-2" type="text" @bind-value="task.TaskName" style="width: 500px;" />
            <!-- Set a specific width for the button -->
            <button class="btn btn-outline-primary" style="width: 100px;">Add Task</button>
        </div>
    </div>
</EditForm>

<!-- Wrapper to align both the form and progress bar to the left -->
<div class="row mt-2">
    <div class="col-auto">
        <div class="progress my-2" style="width: 600px; height:30px;" >
            <div class="progress-bar" role="progressbar" style="width:@(percentageCompleted)%" aria-valuemax="100" aria-valuemin="0">
                @(percentageCompleted)%
            </div>
        </div>
    </div>
</div>



<ul class="list-group my-2">
    @foreach (var taskitem in taskList)
    {
        if (taskitem.IsComplete)
        {
            <!-- Task is Completed: Gray color -->
            <li class="list-group-item list-group-item-secondary mx-1" @onclick="(() => taskitem.IsComplete = !taskitem.IsComplete)">
                <del>@taskitem.TaskName</del>
            </li>
        }
        else
        {
            <!-- Task Uncomplete: Blue color -->
            <li class="list-group-item list-group-item-primary mx-1" @onclick="(() => taskitem.IsComplete = !taskitem.IsComplete)">
                @taskitem.TaskName
            </li>
        }
    }
</ul>


@code {
    protected List<TaskModel> taskList = new List<TaskModel>();
    protected TaskModel task = new TaskModel();

    protected override void OnInitialized()
    {
        if(HeaderName == "")
        {
            HeaderName = "ToDo";
        }
    }

    [Parameter]
    public string HeaderName { get; set; }

    public void AddTask()
    {
        if (!string.IsNullOrEmpty(task.TaskName))
        {
            taskList.Add(task);
            task = new TaskModel();
        }
    }

    public int percentageCompleted
    {
        get
        {
            return taskList.Count > 0 ? (taskList.Count(x => x.IsComplete) * 100 / taskList.Count) : 0;
        }
    }

}
